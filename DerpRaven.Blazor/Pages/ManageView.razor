@page "/manageview"
@*@attribute [Authorize] *@

<h3>Manage View</h3>
<h4 class="errorText">@errorString</h4>



<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Product Type Id</th>
            <th>Image Ids</th>
        </tr>

        @if (_products == null)
        {
            <tr>
                <td colspan="6">Loading...</td>
            </tr>
        }
        else
        {
            @foreach (var item in _products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>@item.ProductTypeId</td>
                    <td>@item.Quantity</td>
                    <td>
                        @foreach (var imageId in item.ImageIds)
                        {
                            <span>@imageId, </span>
                        }
                    </td>
                </tr>
            }
        }
    </thead>
</table>

