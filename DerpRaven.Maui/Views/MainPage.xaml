<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DerpRaven.Maui.Views.MainPage"
             xmlns:models="clr-namespace:DerpRaven.Maui.ViewModels"
             xmlns:dtos="clr-namespace:DerpRaven.Shared.Dtos;assembly=DerpRaven.Shared"
             Background="DimGrey"
             >
    

    <ScrollView
        >
        <VerticalStackLayout
            Padding="0,0"
            Spacing="0">

            <Label
                Text="Welcome to Derp Raven"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to dot net Multi platform App UI" />


            <Grid ColumnDefinitions="*,*">

                <!-- Image for DRS-->
                <Image
                    Source="derpravenstudiologo.png"
                    HeightRequest="150"
                    WidthRequest="150"
                    Aspect="AspectFit" 
                    Margin="30"
                    Grid.Column="0"/>

                <!-- Image for DRP-->
                <Image
                    Source="derpravenlogo.png"
                    HeightRequest="150"
                    WidthRequest="150"
                    Aspect="AspectFit" 
                    Margin="30"
                    Grid.Column="1"/>
            </Grid>

            <CarouselView ItemsSource="{Binding Art}"
                          PeekAreaInsets="100"
                          HeightRequest="250">
                <CarouselView.ItemTemplate SnapPointsType ="None">
                    <DataTemplate x:DataType="dtos:ImageDto">
                        <StackLayout>
                            <Border Stroke="Black"
                                    StrokeShape="RoundRectangle 5"
                                    Margin="10"
                                    Padding="10"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    HeightRequest="230">
                                <StackLayout>
                                    <Label Text="{Binding Alt}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                    <Image Source="{Binding Path}"
                                           Aspect="AspectFit"
                                           HeightRequest="150"
                                           MaximumHeightRequest="150"
                                           HorizontalOptions="Center"
                                           VerticalOptions="EndAndExpand"/>
                                </StackLayout>
                            </Border>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <CarouselView ItemsSource="{Binding Plushies}" PeekAreaInsets="100">
                <CarouselView.ItemTemplate SnapPointsType ="None">
                    <DataTemplate x:DataType="dtos:ImageDto">
                        <StackLayout>
                            <Border Stroke="Black"
                                    StrokeShape="RoundRectangle 5"
                                    Margin="10"
                                    Padding="10"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    HeightRequest="230"
                                    WidthRequest="200">
                                <StackLayout>
                                    <Label Text="{Binding Alt}"
                                           FontAttributes="Bold"
                                           FontSize="18"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center" />
                                    <Image Source="{Binding Path}"
                                           Aspect="AspectFit"
                                           HeightRequest="150"
                                           MaximumHeightRequest="150"
                                           HorizontalOptions="Center"
                                           VerticalOptions="EndAndExpand"/>
                                </StackLayout>
                            </Border>
                        </StackLayout>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </VerticalStackLayout>
        
        
    </ScrollView>

</ContentPage>
