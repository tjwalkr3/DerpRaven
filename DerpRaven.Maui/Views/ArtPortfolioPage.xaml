<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:DerpRaven.Maui.ViewModels"
             xmlns:dtos="clr-namespace:DerpRaven.Shared.Dtos;assembly=DerpRaven.Shared"
             x:Class="DerpRaven.Maui.Views.ArtPortfolioPage"
             Title="Art Portfolio">
    <ScrollView>
        <VerticalStackLayout Padding="0,0" Spacing="0">

            <!-- CollectionView dynamically creating multiple carousels -->
            <CollectionView ItemsSource="{Binding ArtPortfolios}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <CarouselView ItemsSource="{Binding Images}" PeekAreaInsets="100">
                            <CarouselView.ItemTemplate>
                                <DataTemplate x:DataType="dtos:ImageDto">
                                    <StackLayout>
                                        <Border Stroke="Black"
                                            StrokeShape="RoundRectangle 5"
                                            Margin="10"
                                            Padding="10"
                                            HorizontalOptions="Center"
                                            VerticalOptions="Center">
                                            <StackLayout>
                                                <Label Text="{Binding Alt}"
                                                   FontAttributes="Bold"
                                                   FontSize="18"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center" />
                                                <Image Source="{Binding Path}"
                                                   Aspect="AspectFill"
                                                   HeightRequest="150"
                                                   WidthRequest="150"
                                                   HorizontalOptions="Center" />
                                            </StackLayout>
                                        </Border>
                                    </StackLayout>
                                </DataTemplate>
                            </CarouselView.ItemTemplate>
                        </CarouselView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
                
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>